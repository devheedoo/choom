doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Choom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1 Choom 
    main 
      div#divRoom
        form#formRoom
          input#inputRoomId(type="text", placeholder="room id", required)
          button#buttonJoinRoom Create or Join
      div#divCall(hidden=true)
        div#divMyStream
          video#videoMyStream(autoplay, playsinline, width="400", height="400")
          button#buttonAudioOnOff Audio ON
          button#buttonVideoOnOff Video ON
          select#selectCameras
          video#videoPeerStream(autoplay, playsinline, width="400", height="400")
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 